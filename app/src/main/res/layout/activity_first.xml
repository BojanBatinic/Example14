<?xml version="1.0" encoding="utf-8"?>

<!-- LinearLayout contains views. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start an Activity"
        android:id="@+id/start_activity"
        android:onClick="btnStartActivityClicked"
        android:drawableLeft="@drawable/ic_action_start"/>

    <!-- Declares a button that opens a browser -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Web Browser"
        android:id="@+id/open_browser"
        android:onClick="btnOpenBrowserClicked"
        android:drawableLeft="@drawable/action_search"/>

</LinearLayout>